<!DOCTYPE html>
<html>
<head>
  <title>Inventory</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">
  <div id="header">
  </div>
  <div id="top_nav">
    <% if current_user %>
      Logged in as: <strong><%= current_user.user_full_name %></strong>, your current role: <%= current_user.role %>
      <%= link_to "Logout", log_out_path %>
    <% else %>
      <%= link_to "Login", log_in_path %>
    <% end %>
  </div>
  <div id="side_nav">
    <%= link_to "Devices", devices_path %>&nbsp;|
    <%= link_to "Disposables", disposables_path %>&nbsp;|
    <%= link_to "Patients", patients_path %>&nbsp;|
    <%= link_to "Practices", practices_path %>

    <% if current_user %>
      <% if can? :update, @user %>
        | <%= link_to "Users", users_path %>
      <% end %>
    <% end %>
    <% if current_user %>
      <% if can? :create, @device %>
        | <%= link_to "New Device", new_device_path %>
      <% end %>
      <% if can? :create, @disposable %>
        | <%= link_to "New Disposable", new_disposable_path %>
      <% end %>
      <% if can? :create, @patient %>
        | <%= link_to "New Patient", new_patient_path %>
      <% end %>
      <% if can? :create, @practice %>
        | <%= link_to "New Practice", new_practice_path %>
      <% end %>
      <% if can? :create, @user %>
        | <%= link_to "New User", new_user_path %>
      <% end %>
    <% end %>
  </div>
  <div id="errors">
    <% flash.each do |name, msg| %>
      <span id="notice"><%= content_tag :div, msg, :id => "flash_#{name}" %></span>
    <% end %>
  </div>
  <div id="content">
    <%= yield %>
  </div>
</div>
</body>
</html>
