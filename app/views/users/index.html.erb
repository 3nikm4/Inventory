<h1>Listing users</h1>

<table>
  <tr>
    <th>Group</th>
    <th>Username</th>
    <th>Password</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Active</th>
    <th></th>
    <% if can? :update, @device %>
      <th></th>
    <% end %>
    <% if can? :destroy, @device %>
      <th></th>
    <% end %>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.group.group_name %></td>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= user.active %></td>
    <td><%= link_to 'Show', user %></td>
    <% if can? :update, @device %>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% end %>
    <% if can? :destroy, @device %>    
      <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if can? :update, @user %>
  <%= link_to 'New User', new_user_path %>
<% end %>
