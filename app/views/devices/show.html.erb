<h1>Device: <%= @device.serial_number %></h1>

<p>
  <b>Status:</b>
  <%= @device.device_status.device_status %>
</p>

<p>
  <b>Type:</b>
  <%= @device.device_type.device_type %>
</p>

<p>
  <b>Serial Number:</b>
  <%= @device.serial_number %>
</p>

<p>
  <b>Comment:</b>
  <%= @device.comment %>
</p>

<p>
  <b>IMSI:</b>
  <%= @device.imsi %>
</p>

<p>
  <b>ICCID:</b>
  <%= @device.iccid %>
</p>

<%= render @device.device_location %>
<%= render @device.device_problems %>


<% if current_user %>
  <% if can? :update, @device %>
    <%= link_to 'Edit', edit_device_path(@device) %> |
  <% end %>
<% end %>
<%= link_to 'Back', devices_path %>
