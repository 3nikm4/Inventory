<p>
  <b>Device status:</b>
  <%= @device.device_status.device_status %>
</p>

<p>
  <b>Device type:</b>
  <%= @device.device_type.device_type %>
</p>

<p>
  <b>Serial number:</b>
  <%= @device.serial_number %>
</p>

<p>
  <b>Comment:</b>
  <%= @device.comment %>
</p>

<p>
  <b>Imsi:</b>
  <%= @device.imsi %>
</p>

<p>
  <b>Iccid:</b>
  <%= @device.iccid %>
</p>
<% if @device.device_location %>
  <%= render @device.device_location %>
<% end %>
<% if @device.device_test %>
  <%= render @device.device_test %>
<% end %>
<% if @device.device_problems %>
  <%= render @device.device_problems %>
<% end %>

<% if current_user %>
  <% if can? :update, @device %>
    <%= link_to 'Edit', edit_device_path(@device) %> |
  <% end %>
<% end %>
<% if current_user %>
  <% if can? :create, @device %>
    <%= link_to 'New Device', new_device_path %> |
  <% end %>
<% end %>
<%= link_to 'Back', devices_path %>
