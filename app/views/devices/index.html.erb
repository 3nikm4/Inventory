<h1>Devices</h1>

<div align="center">
  <%= paginate @devices %>
</div>
<br />

<table class="pretty">

  <tr>
    <th width="16%"><%= sortable "device_status_id", "Status" %></th>
    <th width="16%"><%= sortable "device_type_id", "Type" %></th>
    <th width="16%"><%= sortable "serial_number", "Serial Number" %></th>
    <th width="8%"><%= sortable "device_carrier_id", "Carrier" %></th>
    <th width="16%">Comments</th>

    <th width="4%"></th>
    <% if can? :update, @device %>
      <th width="4%"></th>
    <% end %>
    <% if can? :destroy, @device %>
      <th width="4%"></th>
    <% end %>
  </tr>



<% @devices.each do |device| %>
  <tr class="<%= cycle('odd','even') %>">
    <td align="center"><%= device.device_status.device_status %></td>
    <td align="center"><%= device.device_type.device_type %></td>
    <td align="center"><%= device.serial_number %></td>
    <td align="center"><%= device.device_carrier.device_carrier %></td>
    <td>
      <% if device.comment.length > 25 %>
        <%= device.comment[0..24] + "..." %>
      <% else %>
        <%= device.comment %>
      <% end %>
    </td>
    <td align="center"><%= link_to 'Show', device %></td>
  <% if can? :update, @device %>
    <td align="center"><%= link_to 'Edit', edit_device_path(device) %></td>
  <% end %>
  <% if can? :destroy, @device %>
    <td align="center"><%= link_to 'Destroy', device, confirm: 'Are you sure?', method: :delete %></td>
  <% end %>
  </tr>
<% end %>
</table>

<br />
<div align="center">
  <%= paginate @devices %>
</div>

<br />

<%= link_to 'New Device', new_device_path %>
